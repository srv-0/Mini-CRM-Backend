generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(EMPLOYEE)
  tasks     Task[]
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus @default(PENDING)

  // Relations
  assignedToId Int?
  assignedTo   User?     @relation(fields: [assignedToId], references: [id])

  customerId   Int
  customer     Customer  @relation(fields: [customerId], references: [id])
}